#!/bin/bash
#

# Disk 1
if [ "$1" = "1"  ]; then
        sudo mount /mnt/d1-2tb
fi

if [ "$1" = "d1" ]; then
        sudo mount /mnt/d1-2tb
fi

# Disk 2
if [ "$1" = "2"  ]; then
        sudo mount /mnt/d2-1tb
fi

if [ "$1" = "d2" ]; then
        sudo mount /mnt/d2-1tb
fi

# Disk 3
if [ "$1" = "3"  ]; then
        sudo mount /mnt/d3-500gb
fi

if [ "$1" = "d3" ]; then
        sudo mount /mnt/d3-500gb
fi

# Disk 4
if [ "$1" = "4"  ]; then
        sudo mount /mnt/d4-500gb
fi

if [ "$1" = "d4"  ]; then
        sudo mount /mnt/d4-500gb
fi

# Disk 5
if [ "$1" = "5"  ]; then
        sudo mount /mnt/d5-1tb
fi

if [ "$1" = "d5"  ]; then
        sudo mount /mnt/d5-1tb
fi

# Disk 6
if [ "$1" = "6"  ]; then
        sudo mount /mnt/d6-500gb
fi

if [ "$1" = "d6"  ]; then
        sudo mount /mnt/d6-500gb
fi

